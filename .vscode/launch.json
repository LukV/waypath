{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ðŸ§ª CLI: Run waypath",
            "type": "debugpy",
            "request": "launch",
            "module": "core.cli",
            "justMyCode": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "ðŸš€ API: Run FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.api.app:app",
                "--reload"
            ],
            "justMyCode": true,
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}
