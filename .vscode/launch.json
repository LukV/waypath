{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ðŸ§ª CLI: Run waypath",
            "type": "debugpy",
            "request": "launch",
            "module": "core.cli",
            "justMyCode": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "ðŸš€ API: Run FastAPI (uv)",
            "type": "debugpy",
